{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "America/Los_Angeles",
  "prConcurrentLimit": 8,
  "assigneesFromCodeOwners": true,
  "lockFileMaintenance": { "enabled": false },
  "rangeStrategy": "bump",
  "separateMajorMinor": false,
  "schedule": ["every weekend"],
  "packageRules": [
    {
      "groupName": "Other Dependencies",
      "description": "All dependencies that are not grouped elsewhere",
      "matchPackageNames": ["/.*/"]
    },
    {
      "groupName": "Personal Libraries",
      "schedule": ["every weekday"],
      "automerge": true,
      "matchPackageNames": ["/^@aneuhold/.*/"]
    },
    {
      "groupName": "Formatting and Linting",
      "automerge": true,
      "matchPackageNames": [
        "typescript-eslint",
        "/^eslint.*/",
        "/@eslint/.*/",
        "/^prettier.*/",
        "/^@typescript-eslint.*/"
      ]
    },
    {
      "groupName": "Svelte",
      "matchPackageNames": [
        "svelty-picker",
        "@fontsource/fira-mono",
        "smui-theme",
        "@sentry/sveltekit",
        "/^svelte.*/",
        "/^@smui.*/",
        "/^@sveltejs/.*/"
      ]
    },
    {
      "groupName": "Build + Testing",
      "automerge": true,
      "matchPackageNames": [
        "typescript",
        "vite",
        "vite-plugin-node-polyfills",
        "vitest",
        "@types/node",
        "@types/jest",
        "@types/node-fetch",
        "yarn",
        "ts-node",
        "ts-jest",
        "rimraf",
        "tslib",
        "tsx",
        "jsr",
        "storybook",
        "/^@storybook/.*/",
        "dotenv",
        "jsonc-parser"
      ]
    },
    {
      "groupName": "Major Locked Deps",
      "matchPackageNames": ["node-fetch", "octokit"],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "groupName": "Major Locked Deps - Disabled",
      "enabled": false,
      "matchPackageNames": ["node-fetch", "octokit"],
      "matchUpdateTypes": ["major"]
    },
    {
      "groupName": "Completely Locked Deps",
      "description": "Updates that are completely locked for one reason or another. See description in README.",
      "enabled": false,
      "matchPackageNames": ["bson", "mongodb"]
    },
    {
      "groupName": "Resolutions Dependencies Disabled",
      "description": "Disable updates to resolutions because resolutions are typically set to get around a specific issue",
      "enabled": false,
      "matchDepTypes": ["resolutions"],
      "automerge": false,
      "matchPackageNames": ["/.*/"]
    }
  ]
}
